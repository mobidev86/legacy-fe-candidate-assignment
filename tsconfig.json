    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@web3-message-signer/shared": ["packages/shared/src"],
      "@web3-message-signer/shared/*": ["packages/shared/src/*"]
